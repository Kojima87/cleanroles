<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.status %></td>
        <td><%= link_to 'Show', [:manage, member] %></td>
        <td><%= link_to 'Edit', edit_manage_member_path(member) %></td>
        <td><%= link_to 'Destroy', [:manage, member], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

