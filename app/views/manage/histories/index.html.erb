<div class="page-header">
  <h1>Listing histories</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Member</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= history.date %></td>
        <td><%= history.member_name %></td>
        <td><%= history.role_name %></td>
        <td><%= link_to 'Destroy', [:manage, history], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
