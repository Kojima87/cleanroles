<%= form_for([:manage, @history], html: { class: 'form-horizontal history' }) do |f| %>
  <% if @history.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(@history.errors.count, "error") %> prohibited this history from being saved:</h2>
      </div>
      <div class="panel-body">
        <ul>
        <% @history.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :date, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :member_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :member_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :role_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
